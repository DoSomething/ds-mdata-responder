{
  "name": "gambit-campaigns",
  "version": "5.6.0",
  "description": "The DoSomething.org chatbot service for campaigns and their activity.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoSomething/gambit-campaigns.git"
  },
  "scripts": {
    "test": "NODE_ENV=test ava --serial",
    "test-fast": "NODE_ENV=test ava --serial --fast",
    "all-tests": "npm run lint && npm run coverage",
    "coverage": "NODE_ENV=test nyc --all ava --serial",
    "html-coverage-report": "nyc report --reporter=html",
    "publish-coverage-report": "nyc report --reporter=lcov && codecov",
    "start": "node server",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "globals": {
      "app": true
    }
  },
  "ava": {
    "concurrency": 5,
    "powerAssert": false,
    "failWithoutAssertions": false,
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "test",
      "coverage"
    ]
  },
  "engines": {
    "node": "8.11.1",
    "npm": "5.7.1"
  },
  "dependencies": {
    "@dosomething/gateway": "^1.4.0",
    "@risingstack/v8-profiler": "^5.7.11",
    "async": "^2.6.0",
    "aws-sdk": "2.36.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.9.2",
    "cacheman": "^2.2.1",
    "cacheman-redis": "^1.1.2",
    "camelcase": "^5.0.0",
    "camelcase-keys-deep": "^0.1.0",
    "connect-timeout": "^1.8.0",
    "contentful": "^3.8.0",
    "date-fns": "^1.29.0",
    "express": "^4.10.2",
    "file-exists": "^4.0.0",
    "html-entities": "^1.1.1",
    "mongoose": "4.6.8",
    "newrelic": "3.2.0",
    "path": "~0.4.9",
    "redis": "^2.8.0",
    "s3-upload-stream": "^1.0.7",
    "serve-favicon": "^2.5.0",
    "simple-oauth2": "^1.5.2",
    "stathat": "0.0.8",
    "superagent": "^2.3.0",
    "superagent-use": "^0.1.0",
    "throng": "^4.0.0",
    "underscore": "^1.9.0",
    "winston": "2.3.x"
  },
  "devDependencies": {
    "@dosomething/eslint-config": "^4.0.0",
    "ava": "^0.25.0",
    "chai": "^4.1.2",
    "chance": "^1.0.16",
    "codecov": "^3.0.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-ava": "^4.5.1",
    "nock": "^9.2.5",
    "node-mocks-http": "^1.6.1",
    "nyc": "^11.8.0",
    "rewire": "^4.0.1",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  }
}
